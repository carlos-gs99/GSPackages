{
  "name": "@globalsoft/hooks",
  "version": "1.0.0",
  "description": "React hooks for Globalsoft Components - translation, dropdowns, autocomplete, performance monitoring and more",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./useTranslation": "./dist/useTranslation.js",
    "./useDropdown": "./dist/useDropdown.js",
    "./useAutocompleter": "./dist/useAutocompleter.js",
    "./useToggle": "./dist/useToggle.js",
    "./useViewPort": "./dist/useViewPort.js",
    "./useFavorites": "./dist/useFavorites.js",
    "./usePageSize": "./dist/usePageSize.js",
    "./usePerformance": "./dist/usePerformance.js",
    "./useOutlineToggle": "./dist/useOutlineToggle.js",
    "./useAutoSave": "./dist/useAutoSave.js",
    "./useErrorHandler": "./dist/useErrorHandler.js",
    "./useMenuHover": "./dist/useMenuHover.js",
    "./useMenuPositioning": "./dist/useMenuPositioning.js",
    "./useMenuViewportDetection": "./dist/useMenuViewportDetection.js",
    "./useSubmenuPosition": "./dist/useSubmenuPosition.js",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "react",
    "hooks",
    "react-hooks",
    "translation",
    "i18n",
    "dropdown",
    "autocomplete",
    "performance",
    "globalsoft"
  ],
  "author": {
    "name": "Carlos Braga",
    "email": "carlos.braga@grupoglobalsoft.pt"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/carlos-gs99/GSPackages.git",
    "directory": "hooks"
  },
  "homepage": "https://carlos-gs99.github.io/GSPackages",
  "bugs": {
    "url": "https://github.com/carlos-gs99/GSPackages/issues"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-i18next": "^15.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.48",
    "react": "^18.3.1",
    "react-i18next": "^15.0.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "sideEffects": false
}
