{
  "name": "globalsoft-components",
  "version": "1.0.0",
  "description": "Modern, accessible React component library by Globalsoft",
  "private": true,
  "author": {
    "name": "Carlos Braga",
    "email": "carlos.braga@grupoglobalsoft.pt"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/carlos-gs99/GSPackages.git"
  },
  "homepage": "https://carlos-gs99.github.io/GSPackages",
  "bugs": {
    "url": "https://github.com/carlos-gs99/GSPackages/issues"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "design-system",
    "typescript",
    "accessibility",
    "a11y",
    "i18n",
    "globalsoft",
    "component-library"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "test": "pnpm -r test",
    "test:unit": "pnpm -r test:unit",
    "test:e2e": "pnpm -r test:e2e",
    "test:coverage": "pnpm -r test:coverage",
    "test:watch": "pnpm -r test:watch",
    "lint": "eslint \"packages/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"packages/**/*.{ts,tsx}\" --fix",
    "typecheck": "pnpm -r typecheck",
    "format": "prettier --write \"packages/**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,md,json}\"",
    "changeset": "changeset",
    "changeset:version": "changeset version && pnpm install --no-frozen-lockfile",
    "changeset:publish": "pnpm build && changeset publish",
    "version-packages": "changeset version",
    "release": "pnpm build && pnpm changeset:publish",
    "docs:dev": "pnpm --filter @globalsoft/docs dev",
    "docs:build": "pnpm --filter @globalsoft/docs build",
    "docs:preview": "pnpm --filter @globalsoft/docs preview",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@vitest/ui": "^1.2.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "happy-dom": "^13.3.5",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "only-allow": "^1.2.1",
    "prettier": "^3.2.4",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^1.2.0",
    "vitest-axe": "^0.1.0",
    "@playwright/test": "^1.41.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  }
}

