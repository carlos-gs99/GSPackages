{
  "name": "globalsoft-components",
  "version": "1.0.0",
  "description": "Modern, accessible React component library by Globalsoft",
  "private": true,
  "workspaces": [
    "utils",
    "hooks",
    "primitives",
    "theme",
    "gs-*"
  ],
  "author": {
    "name": "Carlos Braga",
    "email": "carlos.braga@grupoglobalsoft.pt"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/carlos-gs99/GSPackages.git"
  },
  "homepage": "https://carlos-gs99.github.io/GSPackages",
  "bugs": {
    "url": "https://github.com/carlos-gs99/GSPackages/issues"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "design-system",
    "typescript",
    "accessibility",
    "a11y",
    "i18n",
    "globalsoft",
    "component-library"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rimraf node_modules",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\""
  },
  "devDependencies": {
    "@types/node": "^20.16.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "prettier": "^3.3.0",
    "rimraf": "^6.0.0",
    "tsup": "^8.3.0",
    "typescript": "^5.6.0"
  }
}

