{
  "name": "globalsoft-components",
  "version": "1.0.0",
  "description": "Modern, accessible React component library by Globalsoft",
  "private": true,
  "workspaces": [
    "utils",
    "hooks",
    "primitives",
    "theme",
    "gs-*"
  ],
  "author": {
    "name": "Carlos Braga",
    "email": "carlos.braga@grupoglobalsoft.pt"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/carlos-gs99/GSPackages.git"
  },
  "homepage": "https://carlos-gs99.github.io/GSPackages",
  "bugs": {
    "url": "https://github.com/carlos-gs99/GSPackages/issues"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "design-system",
    "typescript",
    "accessibility",
    "a11y",
    "i18n",
    "globalsoft",
    "component-library"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rimraf node_modules",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "lint": "eslint \"{utils,hooks,primitives,theme}/src/**/*.{ts,tsx}\" --max-warnings 50 --ignore-pattern \"**/classNameUtils.ts\" --ignore-pattern \"**/navigationUtils.tsx\" --ignore-pattern \"**/perfObserverUtils.ts\" --ignore-pattern \"**/renderUtils.tsx\" --ignore-pattern \"**/windowUtils.ts\" --ignore-pattern \"**/a11yDev.ts\" --ignore-pattern \"**/accessibilityUtils.ts\" --ignore-pattern \"**/chartExport.ts\" --ignore-pattern \"**/fieldMappers.ts\"",
    "lint:fix": "eslint \"{utils,hooks,primitives,theme}/src/**/*.{ts,tsx}\" --fix --ignore-pattern \"**/classNameUtils.ts\" --ignore-pattern \"**/navigationUtils.tsx\" --ignore-pattern \"**/perfObserverUtils.ts\" --ignore-pattern \"**/renderUtils.tsx\" --ignore-pattern \"**/windowUtils.ts\"",
    "test": "jest",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "validate": "npm run typecheck && npm run lint && npm run test",
    "prepublishOnly": "npm run build && npm run validate"
  },
  "resolutions": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@tanstack/react-table": "^8.20.5",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.16.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "i18next": "^25.7.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.2.0",
    "prettier": "^3.3.0",
    "react": "^18.3.1",
    "rimraf": "^6.0.0",
    "ts-jest": "^29.4.6",
    "tsup": "^8.3.0",
    "typescript": "^5.6.0"
  }
}
