{
  "name": "@carlos-gs99/gs-toast",
  "version": "1.0.0",
  "description": "Toast notification component with auto-hide and positioning",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./styles.css": "./dist/index.css",
    "./package.json": "./package.json"
  },
  "files": ["dist", "src", "README.md"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["react", "toast", "notification", "snackbar", "ui", "component", "typescript", "a11y", "i18n"],
  "author": {
    "name": "Carlos Braga",
    "email": "carlos.braga@grupoglobalsoft.pt"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/carlos-gs99/GSPackages.git",
    "directory": "gs-toast"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "dependencies": {
    "clsx": "^2.1.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-i18next": "^15.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.0.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "sideEffects": ["*.css"]
}

