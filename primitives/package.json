{
  "name": "@globalsoft/primitives",
  "version": "1.0.0",
  "description": "Headless primitive components for Globalsoft Components - ButtonBase, Overlay, FocusTrap, Popper",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./ButtonBase": "./dist/ButtonBase.js",
    "./FocusTrap": "./dist/FocusTrap.js",
    "./Overlay": "./dist/Overlay.js",
    "./Popper": "./dist/Popper.js",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "react",
    "primitives",
    "headless",
    "unstyled",
    "button",
    "overlay",
    "focus-trap",
    "popper",
    "globalsoft"
  ],
  "author": {
    "name": "Carlos Braga",
    "email": "carlos.braga@grupoglobalsoft.pt"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/carlos-gs99/GSPackages.git",
    "directory": "primitives"
  },
  "homepage": "https://carlos-gs99.github.io/GSPackages",
  "bugs": {
    "url": "https://github.com/carlos-gs99/GSPackages/issues"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "sideEffects": [
    "*.css"
  ]
}
